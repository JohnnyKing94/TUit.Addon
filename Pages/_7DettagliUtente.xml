<GuiXml>
	<Controls>
		<Control name="DynamicTextDettagliUtente" virtual="true" >
		<Dimensions x="920" y="660" />
			<Controls>
				<Control name="$(parent)Container" inherits="ZO_ScrollContainer">
                  <Anchor point="TOPLEFT" offsetY="12" />
                  <Anchor point="BOTTOMRIGHT" offsetY="-12" />
                </Control>
			</Controls> 
		</Control>
		<Control name="DynamicScrollPageDettagliUtente" virtual="true">
			<Anchor point="TOP" relativePoint="TOP" offsetX="0" relativeTo="$(parent)" />
			<Dimensions x="900" y="160" />
			<Controls>
				<Label name="$(parent)Label"  font="ZoFontWinH1" inheritAlpha="true" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="Dettagli Utente">
						<Anchor point="TOPCENTER" relativeTo="$(parent)" relativePoint="TOPCENTER" />
						<Dimensions x="900" y="50" />
				</Label>
				
				
				<Control name="$(parent)ContTesto">
					<!-- DA MODIFICARE IN BASE ALL'OGGETTO PRECENDENTE -->
					<Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)Label" />
					<Dimensions x="900" y="1105" />
					<Controls>

						<Label name="$(parent)UserID" height="10" font="ZoFontWinH2" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="LEFT" text="@UserID">
							<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="30"/>
							<Dimensions x="250" y="35" />
						</Label>

						<Label name="$(parent)Sex" height="10" font="ZoFontWinH2" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="LEFT" text="@Sex">
							<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="30"/>
							<Dimensions x="250" y="35" />
						</Label>
						
						<Label name="$(parent)Gilde" height="10" font="ZoFontWinH2" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="LEFT" text="Gilde">
							<Anchor point="TOPLEFT" relativeTo="$(parent)UserID" relativePoint="TOPLEFT" offsetY="35" offsetX="0"/>
							<Dimensions x="115" y="35" />
						</Label>
						
						<EditBox name="$(parent)GildeList" inherits="ZO_DefaultEditForBackdrop" font="ZoFontWinH4"  mouseEnabled="false" maxInputCharacters="2048" editEnabled="false" multiLine="true" newLineEnabled="true"  selectionColor="FFFFFF" >
							<Dimensions x="850" y="150" />
							<Anchor point="TOPLEFT" relativeTo="$(parent)Gilde" relativePoint="TOPLEFT"  offsetX="0" offsetY="35" />
							<OnInitialized>
								self:SetMultiLine(true)
								self:SetText("Gilda1\r\Gilda2\r\nGilda3")
							</OnInitialized>
						</EditBox>
						
						<Label name="$(parent)Personaggi" height="10" font="ZoFontWinH2" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="LEFT" text="Personaggi">
							<Anchor point="TOPLEFT" relativeTo="$(parent)GildeList" relativePoint="TOPLEFT" offsetX="0" offsetY="120"/>
							<Dimensions x="250" y="35" />
						</Label>						
						
						<Control name="$(parent)ContUserDinamici">
						<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$(parent)Personaggi" offsetX="30" />
							<Dimensions x="700" y="180" />
							<Controls>
								<Label name="$(parent)pre" hidden="true" text="">
									<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
									<Dimensions x="0" y="0" />
								</Label>
							</Controls>
						</Control>	
						
							
						<Button name="$(parent)Riga5" alpha="1" inherits="ZO_DefaultButton">
							<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" offsetX="0" offsetY="0" relativeTo="$(parent)ContTesto" />
							<Dimensions x="180" y="35" />
							<OnMouseDown>
								TamrielUnlimitedIT.LMM:Update(TamrielUnlimitedIT.MENU_CATEGORY_TUI, self:GetNamedChild("Label_BackPage"):GetText())
							</OnMouseDown>
							<Controls>
								<Label name="$(parent)Label_DettagliUtente" height="10" font="ZoFontWinH3" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="Ritorna">
									<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetY="0"/>
									<Dimensions x="115" y="35" />
								</Label> 
								<Label name="$(parent)Label_BackPage"  hidden="true" text="TuiUtenti">
									<Anchor point="CENTER" relativeTo="$(parent)Label_DettagliUtente" relativePoint="CENTER" offsetY="0"/>
								</Label> 
							</Controls>
						</Button>

					</Controls>
				</Control>

			</Controls>
		</Control>

		<Control name="DynamicRowDettagliUtente" virtual="true">
			<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)ContUserDinamici" offsetY="10" />
			<Dimensions x="700" y="80" />
			<Controls>
				<Label name="$(parent)NomePG" height="10" font="ZoFontWinH3" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="LEFT" text="Nome PG">
					<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
					<Dimensions x="300" y="35" />
				</Label>
				
				<Label name="$(parent)Alleanza" height="10" font="ZoFontWinH3" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="RIGHT" text="Alleanza">
					<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TORIGHT" />
					<Dimensions x="200" y="35" />
				</Label>
				
				<Label name="$(parent)Liv" height="10" font="ZoFontWinH3" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="Liv">
					<Anchor point="TOPLEFT" offsetY="10" relativeTo="$(parent)NomePG" relativePoint="BOTTOMLEFT"  />
					<Dimensions x="100" y="35" />
				</Label>
				
				<Label name="$(parent)CP" height="10" font="ZoFontWinH3" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="CP">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Liv" relativePoint="TOPRIGHT"  />
					<Dimensions x="130" y="35" />
				</Label>
				
				<Label name="$(parent)Sex" height="10" font="ZoFontWinH3" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="Sesso">
					<Anchor point="TOPLEFT" relativeTo="$(parent)CP" relativePoint="TOPRIGHT" />
					<Dimensions x="110" y="35" />
				</Label>
				<Label name="$(parent)Race" height="10" font="ZoFontWinH3" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="Razza">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Sex" relativePoint="TOPRIGHT" />
					<Dimensions x="220" y="35" />
				</Label>
				<Label name="$(parent)Class" height="10" font="ZoFontWinH3" inheritAlpha="false"alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="Classe">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Race" relativePoint="TOPRIGHT" />
					<Dimensions x="250" y="35" />
				</Label>
				
			<Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" />
			</Controls>
		</Control>	
		
	</Controls>
</GuiXml>