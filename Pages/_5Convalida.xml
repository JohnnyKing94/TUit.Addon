<GuiXml>
	<Controls>
		<Control name="DynamicTextConvalida" virtual="true" >
		<Dimensions x="920" y="680" />
			<Controls>
				<Control name="$(parent)Container" inherits="ZO_ScrollContainer">
                  <Anchor point="TOPLEFT" offsetY="12" />
                  <Anchor point="BOTTOMRIGHT" offsetY="-12" />
                </Control>
			</Controls> 
		</Control>
		<Control name="DynamicScrollPageConvalida" virtual="true"   >
			<Anchor point="TOP" relativePoint="TOP" offsetX="0" relativeTo="$(parent)" />
			<Dimensions x="900" y="160" />
			<Controls>
				<Label name="$(parent)LabelWarningApp" font="ZoFontWinT2" inheritAlpha="true" color="CC0000" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="LEFT" text="Assicurati che l'applicazione TUit sia in esecuzione">
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)"/>
					<Dimensions y="40" />
				</Label>
				<Control name="$(parent)ConvalidaMsg">
					<Dimensions x="800" y="50" />
					<Anchor point="TOPLEFT" relativeTo="$(parent)LabelWarningApp" relativePoint="BOTTOMLEFT" offsetY="30"/>
					<Controls>
						<Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" />
						<Label name="$(parent)AlreadyActivated" font="ZoFontWinH1" inheritAlpha="true" color="FFF11C" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="">
							<Anchor point="CENTER" relativePoint="CENTER" offsetX="0" offsetY="0" relativeTo="$(parent)" />
							<Dimensions x="800" y="50" />
						</Label>
						<Label name="$(parent)LabelRefused" font="ZoFontWinH1" inheritAlpha="true" color="FFF11C" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="">
							<Anchor point="TOP" relativePoint="TOP" offsetX="0" offsetY="0" relativeTo="$(parent)" />
							<Dimensions x="800" y="50" />
						</Label>
						<EditBox name="$(parent)TextRefused" font="ZoFontWinH4" mouseEnabled="false" maxInputCharacters="2048" editEnabled="false" multiLine="true" newLineEnabled="true" color="FFFFFF" text="">
							<Anchor point="TOPLEFT" relativePoint="TOPLEFT" offsetX="0" offsetY="50" relativeTo="$(parent)" />
							<Dimensions x="800" y="60" />
						</EditBox>
						<EditBox name="$(parent)RefusedValidations" font="ZoFontWinH4" mouseEnabled="false" maxInputCharacters="2048" editEnabled="false" multiLine="true" newLineEnabled="true" color="FFFFFF" text="">
							<Anchor point="TOPLEFT" relativePoint="TOPLEFT" offsetX="0" offsetY="110" relativeTo="$(parent)" />
							<Dimensions x="800" y="30" />
						</EditBox>
					</Controls>
				</Control>
				<Control name="$(parent)ContTesto">
					<!-- DA MODIFICARE IN BASE ALL'OGGETTO PRECENDENTE -->
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$(parent)LabelWarningApp" offsetY="30" />
					<Dimensions x="900" />
					<Controls>
						<EditBox name="$(parent)Riga1" inherits="ZO_DefaultEditForBackdrop" font="ZoFontWinH4"  mouseEnabled="false" maxInputCharacters="4096" editEnabled="false" multiLine="true" newLineEnabled="true"  selectionColor="FFFFFF" >
							<Dimensions x="850" y="120" />
							<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
							<OnInitialized>
								self:SetMultiLine(true)
								self:SetText("Per convalidare il tuo account, inserisci nella casella di testo sottostante il Nome Utente del sito e premi INVIA.\r\nIl tuo account verrà convalidato appena possibile. La convalida avviene via mail di gioco ed è spedita agli amministratori TUit. Quindi occorre attendere i tempi di risposta dei server di ZOS (dai 5 ai 20 minuti) e la connessione di un admin in gioco. Grazie della pazienza!")
							</OnInitialized>
						</EditBox>
						<Control name="$(parent)TextBG" >
							<Dimensions x="310" y="26" />
							<Anchor point="TOP" relativePoint="BOTTOM" offsetY="10" relativeTo="$(parent)Riga1"  />
							<Controls>
								<Backdrop name="$(parent)TextBG" centerColor="000000" edgeColor="AAAAAA">
									<AnchorFill />
									<Edge edgeSize="2" />
								</Backdrop>
								
								<EditBox name="NomeUtenteForum" inherits="ZO_DefaultEditForBackdrop ZO_EditDefaultText" maxInputCharacters="200" editEnabled="true" multiLine="false" newLineEnabled="false"   >
									<Dimensions x="300" y="22" />
									<Anchor point="CENTER" relativePoint="CENTER" relativeTo="$(parent)"  />
								</EditBox>
							</Controls>
						</Control>
						<Button name="$(parent)ConvalidaButtonInvio" alpha="1">
							<Anchor point="TOP" relativePoint="BOTTOM" offsetX="0" offsetY="30" relativeTo="$(parent)TextBG" />
							<OnMouseDown>SendValidationMail()</OnMouseDown>
							<Dimensions x="90" y="24" />
							<Controls>
								<Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" />
								<Label name="$(parent)Label_Convalida" font="ZoFontWinH3" inheritAlpha="false" alpha="1" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="Invia">
									<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetY="0"/>
									<Dimensions x="90" y="24" />
								</Label> 
							</Controls>
						</Button>
						<Label name="$(parent)ConvalidaLabelMsg"  font="ZoFontWinH1" inheritAlpha="true" color="FFF11C" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="">
							<Anchor point="TOP" relativePoint="BOTTOM" offsetX="0" offsetY="30" relativeTo="$(parent)ConvalidaButtonInvio" />
							<Dimensions x="900" y="100" />
						</Label>
						<Label name="$(parent)Riga2" font="$(BOLD_FONT)|22|soft-shadow-thin" inheritAlpha="true" color="FFFFFF" wrapMode="TRUNCATE" text="Contatti">
							<Dimensions x="900" y="22"  />
							<Anchor point="TOPLEFT" relativePoint="BOTOOMLEFT" offsetY="300" relativeTo="$(parent)" />
						</Label>
						<Control name="$(parent)Riga3" >
							<Dimensions y="22" x="900" />
							<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" offsetY="15" relativeTo="$(parent)Riga2"/>
							<Controls>
								<Control name="$(parent)Colonna0"  >
									<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)Riga3" />
									<Dimensions x="900" y="22" />
									<Controls>
										<Label name="$(parent)Label" font="ZoFontWinH4" inheritAlpha="true" color="FFFFFF" wrapMode="TRUNCATE" text="Email: ">
											<Dimensions x="120" y="22" />
											<Anchor point="LEFT" relativeTo="$(parent)" relativePoint="LEFT" />
										</Label>
										<EditBox name="$(parent)mail" inherits="ZO_DefaultEditForBackdrop" maxInputCharacters="100" editEnabled="false" multiLine="false" newLineEnabled="false" >
											<Dimensions x="900" y="22" />
											<Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="TOPRIGHT" />
											<OnMouseUp>
												self:TakeFocus()
												self:SelectAll()
											</OnMouseUp>
											<OnInitialized>
												self:SetText("support@tamrielunlimited.it")					
											</OnInitialized>
										</EditBox>
									</Controls>
								</Control>
							</Controls>
						</Control>
						<Control name="$(parent)Riga4" >
							<Dimensions y="22" x="900" />
							<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$(parent)Riga3"/>
							<Controls>
								<Control name="$(parent)Colonna0"  >
									<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)Riga3" />
									<Dimensions x="900" y="22" />
									<Controls>
										<Label name="$(parent)Label" font="ZoFontWinH4" inheritAlpha="true" color="FFFFFF" wrapMode="TRUNCATE" text="Contattaci: ">
											<Dimensions x="120" y="22" />
											<Anchor point="LEFT" relativeTo="$(parent)" relativePoint="LEFT" />
										</Label>
										<EditBox name="$(parent)mail" inherits="ZO_DefaultEditForBackdrop" maxInputCharacters="100" editEnabled="false" multiLine="false" newLineEnabled="false" >
											<Dimensions x="900" y="22" />
											<Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="TOPRIGHT" />
											<OnMouseUp>
												self:TakeFocus()
												self:SelectAll()
											</OnMouseUp>
											<OnInitialized>
												self:SetText("http://tamrielunlimited.it/contact/")					
											</OnInitialized>
										</EditBox>
									</Controls>
								</Control>
							</Controls>
						</Control>
						<Control name="$(parent)Riga5" >
							<Dimensions y="22" x="900" />
							<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$(parent)Riga4"/>
							<Controls>
								<Control name="$(parent)Colonna0"  >
									<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)Riga3" />
									<Dimensions x="900" y="22" />
									<Controls>
										<Label name="$(parent)Label" font="ZoFontWinH4" inheritAlpha="true" color="FFFFFF" wrapMode="TRUNCATE" text="Addon Tracker: ">
											<Dimensions x="120" y="22" />
											<Anchor point="LEFT" relativeTo="$(parent)" relativePoint="LEFT" />
										</Label>
										<EditBox name="$(parent)mail" inherits="ZO_DefaultEditForBackdrop" maxInputCharacters="100" editEnabled="false" multiLine="false" newLineEnabled="false" >
											<Dimensions x="900" y="22" />
											<Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="TOPRIGHT" />
											<OnMouseUp>
												self:TakeFocus()
												self:SelectAll()
											</OnMouseUp>
											<OnInitialized>
												self:SetText("http://tamrielunlimited.it/addon-tracker/")					
											</OnInitialized>
										</EditBox>
									</Controls>
								</Control>
							</Controls>
						</Control>
						<Control name="$(parent)Riga6" >
							<Dimensions y="22" x="900" />
							<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$(parent)Riga5"/>
							<Controls>
								<Control name="$(parent)Colonna0"  >
									<Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)Riga3" />
									<Dimensions x="900" y="22" />
									<Controls>
										<Label name="$(parent)Label" font="ZoFontWinH4" inheritAlpha="true" color="FFFFFF" wrapMode="TRUNCATE" text="App Tracker: ">
											<Dimensions x="120" y="22" />
											<Anchor point="LEFT" relativeTo="$(parent)" relativePoint="LEFT" />
										</Label>
										<EditBox name="$(parent)mail" inherits="ZO_DefaultEditForBackdrop" maxInputCharacters="100" editEnabled="false" multiLine="false" newLineEnabled="false" >
											<Dimensions x="900" y="22" />
											<Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="TOPRIGHT" />
											<OnMouseUp>
												self:TakeFocus()
												self:SelectAll()
											</OnMouseUp>
											<OnInitialized>
												self:SetText("http://tamrielunlimited.it/app-tracker/")					
											</OnInitialized>
										</EditBox>
									</Controls>
								</Control>
							</Controls>
						</Control>
					</Controls>
				</Control>
			</Controls>
		</Control>
	</Controls>
</GuiXml>